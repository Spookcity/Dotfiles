#! /bin/zsh

sxhkd &
xsetroot -cursor_name left_ptr &

# bspc monitor -d I II III IV V
bspc monitor -d      

bspc config border_width        2
bspc config window_gap          10

bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config focus_by_distance    true
# bspc config history_aware_focus  true
bspc config focus_follows_pointer true
# bspc config click_to_focus true

bspc config normal_border_color         "#A5B2C4"
bspc config focused_border_color        "#9F1D2E"
bspc config presel_feedback_color         "#CC575D"

# rules
bspc desktop  -l monocle
bspc rule -a mpv state=floating
bspc rule -a Chromium desktop=^2 follow=on
bspc rule -a Sunflower desktop=^3 follow=on
bspc rule -a Gimp state=floating
bspc rule -a Lxappearance floating=true
bspc rule -a File-roller floating=true
# bspc rule -a Termite -e  weechat desktop=^5
bspc rule -a Oblogout state=floating
bspc rule -a feh state=floating
bspc rule -a Termite state=floating border=off
bspc rule -a Telegram Web state=floating
bspc rule -a Screenkey manage=off

# startups
# menutray -i &
polybar top &
~/.fehbg &
#~/.wallpapers/wp_init.sh &
compton --config /home/rick/.config/compton.conf -b &
redshift &
mpd &

bspc config external_rules_command ~/.config/bspwm/external-rules.sh
