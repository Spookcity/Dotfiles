# arch stuffs
alias upgrade='sudo pacman -Syu'
alias yup='yaourt -Syua'
alias abs='sudo abs'
alias orphan='pacman -Qtd'
alias y='yaourt'

# python env
alias virtual='VIRTUALENVWRAPPER_PYTHON=/usr/bin/python3 && mkvirtualenv -p /usr/bin/python2.7 my_env'

# android stuffs
alias nougat='VIRTUALENVWRAPPER_PYTHON=/usr/bin/python3 && mkvirtualenv -p /usr/bin/python2.7 my_env && export JAVA_HOME=/usr/lib/jvm/java-8-jdk/jre/ && export USE_NINJA=false && export JACK_SERVER_VM_ARGUMENTS="-Dfile.encoding=UTF-8 -XX:+TieredCompilation -Xmx6144m" && ./prebuilts/sdk/tools/jack-admin start-server'
alias log='adb logcat -d > logcat.txt'
alias device='adb devices'

# java stuffs
alias java7='sudo archlinux-java set java-7-jdk'
alias java8='sudo archlinux-java set java-8-jdk'
alias ajs='archlinux-java status'

# other stuffs
alias c='clear'
alias q='exit'
# alias make='/home/rick/bin/color.sh'
alias mka='/home/rick/bin/color.sh'
alias gconf='GTK2_RC_FILES=/usr/share/themes/Breeze-Dark/gtk-2.0/gtkrc make gconfig'
