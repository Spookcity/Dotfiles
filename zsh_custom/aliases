# arch stuffs
alias upgrade='sudo pacman -Syu'
alias orphan='pacman -Qtd'
alias pac='pacaur -Syua'
alias y='yaourt'

# python env
alias virtual='VIRTUALENVWRAPPER_PYTHON=/usr/bin/python3 && mkvirtualenv -p /usr/bin/python2.7 my_env'

# android stuffs
alias nougat='VIRTUALENVWRAPPER_PYTHON=/usr/bin/python3 && mkvirtualenv -p /usr/bin/python2.7 my_env && export USE_NINJA=false && export JACK_SERVER_VM_ARGUMENTS="-Dfile.encoding=UTF-8 -XX:+TieredCompilation -Xmx6144m" && ./prebuilts/sdk/tools/jack-admin start-server'
alias log='adb logcat -d > logcat.txt'
alias device='adb devices'

# git stuffs
alias g='git'
alias go='git open'
alias gs='git status'
alias gaa='git add --all'
alias gb='git branch -a'
alias gbl='git blame -b -w'
alias gbr='git branch --remote'
alias gc='git checkout'
alias gcm='git commit -m'
alias gcl='git clone'
alias gco='git checkout'
alias gcp='git cherry-pick'
alias gd='git diff'
alias gf='git fetch'
alias gg='git gui citool'
alias gk='\git-dag --all --branches'
alias gl='git pull'
alias glo='git log --pretty --oneline -n 20 --graph --abbrev-commit'
alias gp='git push'
alias gr='git remote -v'
alias grh='git reset --hard'
alias gra='git remote add'
alias gwch='git whatchanged -p --abbrev-commit --pretty=medium'

alias tis='tig status'
alias til='tig log'

# common stuffs
alias grep='grep --color'
alias h='history'
alias c='clear'
alias q='exit'

# alias make='~/scripts/random/color.sh'
alias mka='~/scripts/random/color.sh'
alias gconf='GTK2_RC_FILES=/usr/share/themes/Breeze-Dark/gtk-2.0/gtkrc make gconfig'

