# arch stuffs
alias upgrade='sudo pacman -Syu'
alias orphan='pacman -Qtd'
alias yup='yay -Syu'
alias y='yay'

# python env
alias virtual='VIRTUALENVWRAPPER_PYTHON=/usr/bin/python3 && mkvirtualenv -p /usr/bin/python2.7 my_env'

# android stuffs
alias log='adb logcat -d > logcat.txt'
alias device='adb devices'

# git stuffs
alias g='git'
alias gs='git status'
alias gaa='git add --all'
alias gb='git branch -a'
alias gbl='git blame -b -w'
alias gbr='git branch --remote'
alias gc='git clone'
alias gcm='git commit -m'
alias gco='git checkout'
alias gcp='git cherry-pick'
alias gd='git diff'
alias gf='git fetch'
alias gg='git gui citool'
alias gk='\git-dag --all --branches'
alias gl='git log'
alias gp='git pull'
alias gr='git remote -v'
alias grh='git reset --hard'
alias gra='git remote add'
alias gwch='git whatchanged -p --abbrev-commit --pretty=medium'
alias lg='lazygit'
# alias go='git open'

alias tis='tig status'
alias til='tig log'

# common stuffs
alias grep='grep --color'
alias h='history'
alias c='clear'
alias q='exit'

alias vf='vim $(fzf)'

alias vim='nvim'
alias vimdiff='nvim -d'
